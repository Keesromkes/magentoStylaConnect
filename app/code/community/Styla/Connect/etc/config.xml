<?xml version="1.0"?>
<config>
    <modules>
        <Styla_Connect>
            <version>0.1.0</version>
        </Styla_Connect>
    </modules>
    
    <global>
        <models>
            <styla_connect>
                <class>Styla_Connect_Model</class>
            </styla_connect>
        </models>
        <blocks>
            <styla_connect>
                <class>Styla_Connect_Block</class>
            </styla_connect>
        </blocks>
        <helpers>
            <styla_connect>
                <class>Styla_Connect_Helper</class>
            </styla_connect>
        </helpers>
        
        <cache>
            <types>
                <styla_connect module="styla_connect" translate="label description">
                    <label>Styla Connect API Responses</label>
                    <description>Responses from the Styla API can be stored locally, for the duration defined in module's configuration.</description>
                    <tags>STYLA_CONNECT</tags>
                </styla_connect>
            </types>
        </cache>
    </global>
    
    <frontend>
        <routers>
            <styla_connect>
                <use>standard</use>
                <args>
                    <module>Styla_Connect</module>
                    <frontName>styla_connect</frontName>
                </args>
            </styla_connect>
        </routers>
        
        <layout>
            <updates>
                <styla_connect>
                    <file>styla/connect.xml</file>
                </styla_connect>
            </updates>
        </layout>
    </frontend>
    
    <default>
        <web>
            <routers>
                <styla_connect>
                    <area>frontend</area>
                    <class>Styla_Connect_Controller_Router</class>
                </styla_connect>
            </routers>
        </web>
        
        <styla_connect>
            <basic>
                <frontend_name>magazin</frontend_name>
                <enabled>1</enabled>
                <cache_lifetime>3600</cache_lifetime>
                <use_magento_layout>0</use_magento_layout>
            </basic>
        </styla_connect>
    </default>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Styla_Connect after="Mage_Adminhtml">Styla_Connect_Adminhtml</Styla_Connect>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <styla_connect>
                                            <title>Styla Connect</title>
                                        </styla_connect>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        
        <layout>
            <updates>
                <styla_connect>
                    <file>styla/connect.xml</file>
                </styla_connect>
            </updates>
        </layout>
    </adminhtml>
</config>